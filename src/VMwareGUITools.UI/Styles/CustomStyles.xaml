<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Custom styles for VMware GUI Tools application -->
    
    <!-- VMware Color Brushes -->
    <SolidColorBrush x:Key="VMwareBlueBrush" Color="#0091DA"/>
    <SolidColorBrush x:Key="VMwareOrangeBrush" Color="#FF9500"/>
    <SolidColorBrush x:Key="VMwareGreenBrush" Color="#00B04F"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    
    <!-- Custom Card Style -->
    <Style x:Key="VMwareCard" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Status Indicator Style -->
    <Style x:Key="StatusIndicator" TargetType="Ellipse">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

</ResourceDictionary> 