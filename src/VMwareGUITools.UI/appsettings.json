{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=vmware-gui-tools.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "VMwareGUITools.Infrastructure.VMware": "Debug"
    }
  },
  "VMwareGUITools": {
    "UseMachineLevelEncryption": false,
    "ConnectionTimeoutSeconds": 30,
    "DefaultCheckTimeoutSeconds": 300,
    "EnableAutoDiscovery": true,
    "CheckScriptsPath": "Scripts",
    "ReportsPath": "Reports"
  },
  "vSphereRestAPI": {
    "ConnectionTimeoutSeconds": 60,
    "RequestTimeoutSeconds": 300,
    "IgnoreInvalidCertificates": true,
    "EnableVerboseLogging": true,
    "MaxConcurrentConnections": 10,
    "EnableSessionPooling": true,
    "SessionPoolSize": 5,
    "SessionIdleTimeoutMinutes": 30,
    "RetryAttempts": 3,
    "RetryDelaySeconds": 2
  },
  "HttpClient": {
    "DefaultTimeoutSeconds": 300,
    "MaxResponseContentBufferSize": 10485760,
    "EnableCompression": true
  }
} 