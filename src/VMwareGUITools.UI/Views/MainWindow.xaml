<Window x:Class="VMwareGUITools.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="VMware GUI Tools - vSphere Infrastructure Management" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <materialDesign:ColorZone Grid.Row="0" 
                                      Padding="16,8" 
                                      materialDesign:ElevationAssist.Elevation="Dp4"
                                      Mode="PrimaryMid">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Server" 
                                                 Height="32" Width="32" 
                                                 VerticalAlignment="Center"
                                                 Foreground="White"
                                                 Margin="0,0,12,0"/>
                        <TextBlock Text="VMware GUI Tools" 
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Medium"
                                   Foreground="White"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                                Command="{Binding RefreshCommand}"
                                ToolTip="Refresh All"
                                Margin="4,0">
                            <materialDesign:PackIcon Kind="Refresh" 
                                                     Height="20" Width="20"
                                                     Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                                Command="{Binding SettingsCommand}"
                                ToolTip="Settings"
                                Margin="4,0">
                            <materialDesign:PackIcon Kind="Settings" 
                                                     Height="20" Width="20"
                                                     Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" MinWidth="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - vCenter List -->
                <materialDesign:Card Grid.Column="0" 
                                     Margin="8"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- vCenter Panel Header -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource VMwareBlueBrush}"
                                Padding="16,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                           Text="vCenter Servers"
                                           FontWeight="Medium"
                                           FontSize="16"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                
                                <Button Grid.Column="1"
                                        Style="{StaticResource MaterialDesignToolButton}"
                                        Command="{Binding AddVCenterCommand}"
                                        ToolTip="Add vCenter Server">
                                    <materialDesign:PackIcon Kind="Plus" 
                                                             Height="20" Width="20"
                                                             Foreground="White"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- vCenter List -->
                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding VCenters}"
                                 SelectedItem="{Binding SelectedVCenter}"
                                 Style="{StaticResource MaterialDesignListBox}"
                                 Margin="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="8">
                                        <Grid.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Edit" 
                                                          Icon="{materialDesign:PackIcon Kind=Edit}"
                                                          Command="{Binding DataContext.EditVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"/>
                                                <MenuItem Header="Delete" 
                                                          Icon="{materialDesign:PackIcon Kind=Delete}"
                                                          Command="{Binding DataContext.DeleteVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"/>
                                                <Separator/>
                                                <MenuItem Header="Test Connection" 
                                                          Icon="{materialDesign:PackIcon Kind=Connection}"
                                                          Command="{Binding DataContext.TestVCenterConnectionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"/>
                                            </ContextMenu>
                                        </Grid.ContextMenu>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Status Indicator -->
                                        <Ellipse Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                                 Width="12" Height="12"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Connected">
                                                            <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Disconnected">
                                                            <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="NotTested">
                                                            <Setter Property="Fill" Value="{StaticResource InfoBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Stale">
                                                            <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Disabled">
                                                            <Setter Property="Fill" Value="Gray"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>

                                        <!-- vCenter Name -->
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding DisplayName}"
                                                   FontWeight="Medium"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- vCenter URL -->
                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                   Text="{Binding Url}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Edit Button -->
                                        <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"
                                                Style="{StaticResource MaterialDesignToolButton}"
                                                Command="{Binding DataContext.EditVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Edit vCenter"
                                                Margin="2,0">
                                            <materialDesign:PackIcon Kind="Edit" Height="14" Width="14"/>
                                        </Button>

                                        <!-- Connect Button -->
                                        <Button Grid.Row="0" Grid.Column="3" Grid.RowSpan="2"
                                                Style="{StaticResource MaterialDesignToolButton}"
                                                Command="{Binding DataContext.ConnectVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Connect"
                                                Margin="2,0">
                                            <materialDesign:PackIcon Kind="Connection" Height="16" Width="16"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- PowerCLI Status -->
                        <Border Grid.Row="2" 
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,1,0,0"
                                Padding="16,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="PowerShell"
                                                         Height="16" Width="16"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="False">
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                                
                                <TextBlock Grid.Column="1"
                                           FontSize="11"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="True">
                                                    <Setter Property="Text" Value="PowerCLI Available"/>
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="False">
                                                    <Setter Property="Text" Value="PowerCLI Not Found"/>
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Grid>
                </materialDesign:Card>

                <!-- Splitter -->
                <GridSplitter Grid.Column="1" 
                              Width="4" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Stretch"
                              Background="{DynamicResource MaterialDesignDivider}"/>

                <!-- Right Panel - Main Content -->
                <materialDesign:Card Grid.Column="2" 
                                     Margin="8"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid>
                        <!-- Welcome Screen -->
                        <StackPanel VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Visibility="{Binding ShowWelcomeScreen, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <materialDesign:PackIcon Kind="Server" 
                                                     Height="64" Width="64"
                                                     HorizontalAlignment="Center"
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                     Margin="0,0,0,16"/>
                            <TextBlock Text="Welcome to VMware GUI Tools"
                                       FontSize="24"
                                       FontWeight="Light"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Add a vCenter Server to get started"
                                       FontSize="16"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Content Area (when vCenter is selected) -->
                        <Grid Visibility="{Binding ShowContentArea, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Content Header -->
                            <Border Grid.Row="0" 
                                    Background="{DynamicResource MaterialDesignChipBackground}"
                                    Padding="16,12">
                                <TextBlock Text="{Binding SelectedVCenter.DisplayName, StringFormat='vCenter: {0}'}"
                                           FontWeight="Medium"
                                           FontSize="18"/>
                            </Border>

                            <!-- Tabs/Content -->
                            <TabControl Grid.Row="1" 
                                        Style="{StaticResource MaterialDesignTabControl}"
                                        Margin="16">
                                <TabItem Header="Overview">
                                    <Grid Margin="16">
                                        <TextBlock Text="vCenter Overview - Coming Soon"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="Clusters">
                                    <Grid Margin="16">
                                        <TextBlock Text="Cluster Management - Coming Soon"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="Hosts">
                                    <Grid Margin="16">
                                        <TextBlock Text="Host Management - Coming Soon"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="Checks">
                                    <Grid Margin="16">
                                        <TextBlock Text="Health &amp; Configuration Checks - Coming Soon"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Status Bar -->
            <materialDesign:ColorZone Grid.Row="2" 
                                      Mode="PrimaryLight" 
                                      Padding="16,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="{Binding StatusMessage}"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Clock" 
                                                 Height="16" Width="16"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding CurrentTime, StringFormat='HH:mm:ss'}"
                                   VerticalAlignment="Center"
                                   FontFamily="Consolas"/>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>
        </Grid>
    </materialDesign:DialogHost>
</Window> 