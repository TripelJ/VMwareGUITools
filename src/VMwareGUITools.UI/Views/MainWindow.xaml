<Window x:Class="VMwareGUITools.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:VMwareGUITools.UI.ViewModels"
        xmlns:converters="clr-namespace:VMwareGUITools.UI.Converters"
        Title="VMware GUI Tools - vSphere Infrastructure Management" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:ResourceUsageConverter x:Key="ResourceUsageConverter"/>
    </Window.Resources>

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <materialDesign:ColorZone Grid.Row="0" 
                                      Padding="16,8" 
                                      materialDesign:ElevationAssist.Elevation="Dp4"
                                      Mode="PrimaryMid">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Server" 
                                                 Height="32" Width="32" 
                                                 VerticalAlignment="Center"
                                                 Foreground="White"
                                                 Margin="0,0,12,0"/>
                        <TextBlock Text="VMware GUI Tools" 
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Medium"
                                   Foreground="White"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                                Command="{Binding RefreshCommand}"
                                ToolTip="Refresh All"
                                Margin="4,0">
                            <materialDesign:PackIcon Kind="Refresh" 
                                                     Height="20" Width="20"
                                                     Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                                Command="{Binding SettingsCommand}"
                                ToolTip="Settings"
                                Margin="4,0">
                            <materialDesign:PackIcon Kind="Settings" 
                                                     Height="20" Width="20"
                                                     Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" MinWidth="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - vCenter List -->
                <materialDesign:Card Grid.Column="0" 
                                     Margin="8"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- vCenter Panel Header -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource VMwareBlueBrush}"
                                Padding="16,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                           Text="vCenter Servers"
                                           FontWeight="Medium"
                                           FontSize="16"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                
                                <Button Grid.Column="1"
                                        Style="{StaticResource MaterialDesignToolButton}"
                                        Command="{Binding AddVCenterCommand}"
                                        ToolTip="Add vCenter Server">
                                    <materialDesign:PackIcon Kind="Plus" 
                                                             Height="20" Width="20"
                                                             Foreground="White"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- vCenter List -->
                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding VCenters}"
                                 SelectedItem="{Binding SelectedVCenter}"
                                 Style="{StaticResource MaterialDesignListBox}"
                                 Margin="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="8">
                                        <Grid.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Edit" 
                                                          Icon="{materialDesign:PackIcon Kind=Edit}"
                                                          Command="{Binding DataContext.EditVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"/>
                                                <MenuItem Header="Delete" 
                                                          Icon="{materialDesign:PackIcon Kind=Delete}"
                                                          Command="{Binding DataContext.DeleteVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"/>
                                                <Separator/>
                                                <MenuItem Header="Test Connection" 
                                                          Icon="{materialDesign:PackIcon Kind=Connection}"
                                                          Command="{Binding DataContext.TestVCenterConnectionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"/>
                                            </ContextMenu>
                                        </Grid.ContextMenu>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Status Indicator -->
                                        <Ellipse Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                                 Width="12" Height="12"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Connected">
                                                            <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Disconnected">
                                                            <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="NotTested">
                                                            <Setter Property="Fill" Value="{StaticResource InfoBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Stale">
                                                            <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Disabled">
                                                            <Setter Property="Fill" Value="Gray"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>

                                        <!-- vCenter Name -->
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding DisplayName}"
                                                   FontWeight="Medium"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- vCenter URL -->
                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                   Text="{Binding Url}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Edit Button -->
                                        <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"
                                                Style="{StaticResource MaterialDesignToolButton}"
                                                Command="{Binding DataContext.EditVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Edit vCenter"
                                                Margin="2,0">
                                            <materialDesign:PackIcon Kind="Edit" Height="14" Width="14"/>
                                        </Button>

                                        <!-- Connect Button -->
                                        <Button Grid.Row="0" Grid.Column="3" Grid.RowSpan="2"
                                                Style="{StaticResource MaterialDesignToolButton}"
                                                Command="{Binding DataContext.ConnectVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Connect"
                                                Margin="2,0">
                                            <materialDesign:PackIcon Kind="Connection" Height="16" Width="16"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- VMware API Status -->
                        <Border Grid.Row="2" 
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,1,0,0"
                                Padding="16,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="CloudSync"
                                                         Height="16" Width="16"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="False">
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                                
                                <TextBlock Grid.Column="1"
                                           FontSize="11"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="True">
                                                    <Setter Property="Text" Value="VMware REST API Ready"/>
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="False">
                                                    <Setter Property="Text" Value="VMware API Not Available"/>
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- Database Status -->
                        <Border Grid.Row="3" 
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,1,0,0"
                                Padding="16,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="Database"
                                                         Height="16" Width="16"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDatabaseConnected}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsDatabaseConnected}" Value="False">
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                                
                                <TextBlock Grid.Column="1"
                                           FontSize="11"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDatabaseConnected}" Value="True">
                                                    <Setter Property="Text" Value="Database Connected"/>
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsDatabaseConnected}" Value="False">
                                                    <Setter Property="Text" Value="Database Disconnected"/>
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Grid>
                </materialDesign:Card>

                <!-- Splitter -->
                <GridSplitter Grid.Column="1" 
                              Width="4" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Stretch"
                              Background="{DynamicResource MaterialDesignDivider}"/>

                <!-- Right Panel - Main Content -->
                <materialDesign:Card Grid.Column="2" 
                                     Margin="8"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid>
                        <!-- Welcome Screen -->
                        <StackPanel VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Visibility="{Binding ShowWelcomeScreen, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <materialDesign:PackIcon Kind="Server" 
                                                     Height="64" Width="64"
                                                     HorizontalAlignment="Center"
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                     Margin="0,0,0,16"/>
                            <TextBlock Text="Welcome to VMware GUI Tools"
                                       FontSize="24"
                                       FontWeight="Light"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Add a vCenter Server to get started"
                                       FontSize="16"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Content Area (when vCenter is selected) -->
                        <Grid Visibility="{Binding ShowContentArea, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Content Header -->
                            <Border Grid.Row="0" 
                                    Background="{DynamicResource MaterialDesignChipBackground}"
                                    Padding="16,12">
                                <TextBlock Text="{Binding SelectedVCenter.DisplayName, StringFormat='vCenter: {0}'}"
                                           FontWeight="Medium"
                                           FontSize="18"/>
                            </Border>

                            <!-- Tabs/Content -->
                            <TabControl Grid.Row="1" 
                                        Style="{StaticResource MaterialDesignTabControl}"
                                        Margin="16">
                                <TabItem Header="Overview">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="8">
                                        <Grid x:Name="OverviewContent">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header with Refresh Button -->
                                            <Border Grid.Row="0" 
                                                    Background="{DynamicResource MaterialDesignChipBackground}"
                                                    CornerRadius="4"
                                                    Margin="0,0,0,16"
                                                    Padding="16,12">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                        <TextBlock Text="vCenter Overview"
                                                                   FontSize="18"
                                                                   FontWeight="Medium"/>
                                                        <TextBlock Text="Real-time resource utilization and inventory"
                                                                   FontSize="12"
                                                                   Opacity="0.7"
                                                                   Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                    
                                                    <Button Grid.Column="1"
                                                            Style="{StaticResource MaterialDesignToolButton}"
                                                            Command="{Binding VCenterOverviewViewModel.RefreshCommand}"
                                                            ToolTip="Refresh Overview Data">
                                                        <materialDesign:PackIcon Kind="Refresh" Height="20" Width="20"/>
                                                    </Button>
                                                </Grid>
                                            </Border>

                                            <!-- Summary Cards Row -->
                                            <Grid Grid.Row="1" Margin="0,0,0,16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Clusters Card -->
                                                <materialDesign:Card Grid.Column="0" 
                                                                     Margin="0,0,8,0"
                                                                     materialDesign:ElevationAssist.Elevation="Dp2">
                                                    <Border Padding="16">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <materialDesign:PackIcon Grid.Row="0"
                                                                                     Kind="ServerNetwork"
                                                                                     Height="32" Width="32"
                                                                                     HorizontalAlignment="Center"
                                                                                     Foreground="{StaticResource VMwareBlueBrush}"
                                                                                     Margin="0,0,0,8"/>
                                                            
                                                            <TextBlock Grid.Row="1"
                                                                       Text="{Binding VCenterOverviewViewModel.OverviewData.ClusterCount, FallbackValue=0}"
                                                                       FontSize="28"
                                                                       FontWeight="Bold"
                                                                       HorizontalAlignment="Center"
                                                                       Foreground="{StaticResource VMwareBlueBrush}"/>
                                                            
                                                            <TextBlock Grid.Row="2"
                                                                       Text="Clusters"
                                                                       FontSize="14"
                                                                       HorizontalAlignment="Center"
                                                                       Opacity="0.8"/>
                                                        </Grid>
                                                    </Border>
                                                </materialDesign:Card>

                                                <!-- Hosts Card -->
                                                <materialDesign:Card Grid.Column="1" 
                                                                     Margin="4,0"
                                                                     materialDesign:ElevationAssist.Elevation="Dp2">
                                                    <Border Padding="16">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <materialDesign:PackIcon Grid.Row="0"
                                                                                     Kind="Server"
                                                                                     Height="32" Width="32"
                                                                                     HorizontalAlignment="Center"
                                                                                     Foreground="{StaticResource VMwareOrangeBrush}"
                                                                                     Margin="0,0,0,8"/>
                                                            
                                                            <TextBlock Grid.Row="1"
                                                                       Text="{Binding VCenterOverviewViewModel.OverviewData.HostCount, FallbackValue=0}"
                                                                       FontSize="28"
                                                                       FontWeight="Bold"
                                                                       HorizontalAlignment="Center"
                                                                       Foreground="{StaticResource VMwareOrangeBrush}"/>
                                                            
                                                            <TextBlock Grid.Row="2"
                                                                       Text="Hosts"
                                                                       FontSize="14"
                                                                       HorizontalAlignment="Center"
                                                                       Opacity="0.8"/>
                                                        </Grid>
                                                    </Border>
                                                </materialDesign:Card>

                                                <!-- VMs Card -->
                                                <materialDesign:Card Grid.Column="2" 
                                                                     Margin="8,0,0,0"
                                                                     materialDesign:ElevationAssist.Elevation="Dp2">
                                                    <Border Padding="16">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <materialDesign:PackIcon Grid.Row="0"
                                                                                     Kind="Monitor"
                                                                                     Height="32" Width="32"
                                                                                     HorizontalAlignment="Center"
                                                                                     Foreground="{StaticResource VMwareGreenBrush}"
                                                                                     Margin="0,0,0,8"/>
                                                            
                                                            <TextBlock Grid.Row="1"
                                                                       Text="{Binding VCenterOverviewViewModel.OverviewData.VmCount, FallbackValue=0}"
                                                                       FontSize="28"
                                                                       FontWeight="Bold"
                                                                       HorizontalAlignment="Center"
                                                                       Foreground="{StaticResource VMwareGreenBrush}"/>
                                                            
                                                            <TextBlock Grid.Row="2"
                                                                       Text="Virtual Machines"
                                                                       FontSize="14"
                                                                       HorizontalAlignment="Center"
                                                                       Opacity="0.8"/>
                                                        </Grid>
                                                    </Border>
                                                </materialDesign:Card>
                                            </Grid>

                                            <!-- Resource Usage Gauges -->
                                            <Grid Grid.Row="2" Margin="0,0,0,16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- CPU Usage -->
                                                <materialDesign:Card Grid.Column="0" 
                                                                     Margin="0,0,8,0"
                                                                     materialDesign:ElevationAssist.Elevation="Dp2">
                                                    <Border Padding="16">
                                                        <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        
                                                        <TextBlock Grid.Row="0"
                                                                   Text="CPU Usage"
                                                                   FontSize="16"
                                                                   FontWeight="Medium"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,12"/>
                                                        
                                                        <materialDesign:Card Grid.Row="1"
                                                                             Width="120" Height="120"
                                                                             HorizontalAlignment="Center"
                                                                             Background="{DynamicResource MaterialDesignCardBackground}">
                                                            <Border Padding="8">
                                                                <Grid>
                                                                    <!-- Progress Ring -->
                                                                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                                                 Value="{Binding VCenterOverviewViewModel.OverviewData.CpuUsage.UsagePercentage, Mode=OneWay, FallbackValue=0}"
                                                                                 Width="100" Height="100"
                                                                                 IsIndeterminate="False"
                                                                                 Foreground="{StaticResource VMwareBlueBrush}"/>
                                                                    
                                                                    <!-- Percentage Text -->
                                                                    <TextBlock Text="{Binding VCenterOverviewViewModel.OverviewData.CpuUsage.UsagePercentage, StringFormat='{}{0:F1}%', Mode=OneWay, FallbackValue='0%'}"
                                                                               FontSize="18"
                                                                               FontWeight="Bold"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </Border>
                                                        </materialDesign:Card>
                                                        
                                                        <TextBlock Grid.Row="2"
                                                                   Text="{Binding VCenterOverviewViewModel.OverviewData.CpuUsage, Converter={StaticResource ResourceUsageConverter}, FallbackValue='N/A'}"
                                                                   FontSize="11"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,8,0,0"
                                                                   TextWrapping="Wrap"/>
                                                        </Grid>
                                                    </Border>
                                                </materialDesign:Card>

                                                <!-- Memory Usage -->
                                                <materialDesign:Card Grid.Column="1" 
                                                                     Margin="4,0"
                                                                     materialDesign:ElevationAssist.Elevation="Dp2">
                                                    <Border Padding="16">
                                                        <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        
                                                        <TextBlock Grid.Row="0"
                                                                   Text="Memory Usage"
                                                                   FontSize="16"
                                                                   FontWeight="Medium"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,12"/>
                                                        
                                                        <materialDesign:Card Grid.Row="1"
                                                                             Width="120" Height="120"
                                                                             HorizontalAlignment="Center"
                                                                             Background="{DynamicResource MaterialDesignCardBackground}">
                                                            <Border Padding="8">
                                                                <Grid>
                                                                    <!-- Progress Ring -->
                                                                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                                                 Value="{Binding VCenterOverviewViewModel.OverviewData.MemoryUsage.UsagePercentage, Mode=OneWay, FallbackValue=0}"
                                                                                 Width="100" Height="100"
                                                                                 IsIndeterminate="False"
                                                                                 Foreground="{StaticResource VMwareOrangeBrush}"/>
                                                                    
                                                                    <!-- Percentage Text -->
                                                                    <TextBlock Text="{Binding VCenterOverviewViewModel.OverviewData.MemoryUsage.UsagePercentage, StringFormat='{}{0:F1}%', Mode=OneWay, FallbackValue='0%'}"
                                                                               FontSize="18"
                                                                               FontWeight="Bold"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </Border>
                                                        </materialDesign:Card>
                                                        
                                                        <TextBlock Grid.Row="2"
                                                                   Text="{Binding VCenterOverviewViewModel.OverviewData.MemoryUsage, Converter={StaticResource ResourceUsageConverter}, FallbackValue='N/A'}"
                                                                   FontSize="11"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,8,0,0"
                                                                   TextWrapping="Wrap"/>
                                                        </Grid>
                                                    </Border>
                                                </materialDesign:Card>

                                                <!-- Storage Usage -->
                                                <materialDesign:Card Grid.Column="2" 
                                                                     Margin="8,0,0,0"
                                                                     materialDesign:ElevationAssist.Elevation="Dp2">
                                                    <Border Padding="16">
                                                        <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        
                                                        <TextBlock Grid.Row="0"
                                                                   Text="Storage Usage"
                                                                   FontSize="16"
                                                                   FontWeight="Medium"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,12"/>
                                                        
                                                        <materialDesign:Card Grid.Row="1"
                                                                             Width="120" Height="120"
                                                                             HorizontalAlignment="Center"
                                                                             Background="{DynamicResource MaterialDesignCardBackground}">
                                                            <Border Padding="8">
                                                                <Grid>
                                                                    <!-- Progress Ring -->
                                                                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                                                 Value="{Binding VCenterOverviewViewModel.OverviewData.StorageUsage.UsagePercentage, Mode=OneWay, FallbackValue=0}"
                                                                                 Width="100" Height="100"
                                                                                 IsIndeterminate="False"
                                                                                 Foreground="{StaticResource VMwareGreenBrush}"/>
                                                                    
                                                                    <!-- Percentage Text -->
                                                                    <TextBlock Text="{Binding VCenterOverviewViewModel.OverviewData.StorageUsage.UsagePercentage, StringFormat='{}{0:F1}%', Mode=OneWay, FallbackValue='0%'}"
                                                                               FontSize="18"
                                                                               FontWeight="Bold"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </Border>
                                                        </materialDesign:Card>
                                                        
                                                        <TextBlock Grid.Row="2"
                                                                   Text="{Binding VCenterOverviewViewModel.OverviewData.StorageUsage, Converter={StaticResource ResourceUsageConverter}, FallbackValue='N/A'}"
                                                                   FontSize="11"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,8,0,0"
                                                                   TextWrapping="Wrap"/>
                                                        </Grid>
                                                    </Border>
                                                </materialDesign:Card>
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </TabItem>
                                <TabItem Header="Infrastructure">
                                    <Grid Margin="16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header with Refresh Button -->
                                        <Border Grid.Row="0" 
                                                Background="{DynamicResource MaterialDesignChipBackground}"
                                                CornerRadius="4"
                                                Margin="0,0,0,16"
                                                Padding="16,12">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Server" 
                                                                             Height="20" Width="20"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,8,0"/>
                                                    <TextBlock Text="Infrastructure Overview"
                                                               FontWeight="Medium"
                                                               FontSize="16"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="Live Data - Status updates every 2 minutes"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                               VerticalAlignment="Center"
                                                               Margin="8,0,0,0"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Row="0" Grid.Column="1"
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding InfrastructureViewModel.RefreshCommand}"
                                                        ToolTip="Refresh Infrastructure"
                                                        Height="32" Width="32">
                                                    <materialDesign:PackIcon Kind="Refresh" Height="16" Width="16"/>
                                                </Button>

                                                <!-- Status and Last Updated -->
                                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                            Orientation="Horizontal" 
                                                            Margin="0,8,0,0">
                                                    <TextBlock Text="{Binding InfrastructureViewModel.StatusMessage}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding InfrastructureViewModel.LastUpdated, StringFormat=' | Last Updated: {0:HH:mm:ss}'}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                               VerticalAlignment="Center"
                                                               Visibility="{Binding InfrastructureViewModel.LastUpdated, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- Infrastructure Tree View -->
                                        <materialDesign:Card Grid.Row="1" 
                                                             materialDesign:ElevationAssist.Elevation="Dp1"
                                                             Padding="0">
                                            <Grid>
                                                <!-- Loading Indicator -->
                                                <Grid Visibility="{Binding InfrastructureViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <StackPanel VerticalAlignment="Center" 
                                                                HorizontalAlignment="Center">
                                                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                                     Width="48" Height="48"
                                                                     IsIndeterminate="True"
                                                                     Margin="0,0,0,16"/>
                                                        <TextBlock Text="Loading Infrastructure..."
                                                                   HorizontalAlignment="Center"
                                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                    </StackPanel>
                                                </Grid>

                                                                                <!-- TreeView -->
                                <TreeView ItemsSource="{Binding InfrastructureViewModel.InfrastructureItems}"
                                          Padding="8">
                                    <TreeView.Style>
                                        <Style TargetType="TreeView" BasedOn="{StaticResource MaterialDesignTreeView}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding InfrastructureViewModel.IsLoading}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding InfrastructureViewModel.InfrastructureItems.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TreeView.Style>
                                    <TreeView.ItemTemplate>
                                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                            <Border Padding="4,2" 
                                                    CornerRadius="2"
                                                    ToolTip="{Binding ToolTip}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Status Indicator with Animation -->
                                                    <Ellipse Grid.Column="0"
                                                             Width="8" Height="8"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,6,0"
                                                             Fill="{Binding StatusColor}">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ShouldFlash}" Value="True">
                                                                        <DataTrigger.EnterActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard RepeatBehavior="Forever">
                                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                                     From="1.0" To="0.3" Duration="0:0:0.8"
                                                                                                     AutoReverse="True"/>
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </DataTrigger.EnterActions>
                                                                        <DataTrigger.ExitActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                                     To="1.0" Duration="0:0:0.2"/>
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </DataTrigger.ExitActions>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>

                                                    <!-- Icon -->
                                                    <materialDesign:PackIcon Grid.Column="1"
                                                                             Kind="{Binding Icon}"
                                                                             Height="16" Width="16"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,6,0">
                                                        <materialDesign:PackIcon.Style>
                                                            <Style TargetType="materialDesign:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Type}" Value="Cluster">
                                                                        <Setter Property="Foreground" Value="#2196F3"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Type}" Value="Host">
                                                                        <Setter Property="Foreground" Value="#FF9800"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Type}" Value="DatastoresFolder">
                                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Type}" Value="Datastore">
                                                                        <Setter Property="Foreground" Value="#9C27B0"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </materialDesign:PackIcon.Style>
                                                    </materialDesign:PackIcon>

                                                    <!-- Name -->
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding Name}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Type}" Value="Cluster">
                                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Type}" Value="DatastoresFolder">
                                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <!-- Type Indicator -->
                                                    <Border Grid.Column="3"
                                                            Background="{Binding TypeIndicatorColor}"
                                                            CornerRadius="2"
                                                            Padding="4,1"
                                                            Margin="4,0,0,0"
                                                            VerticalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding TypeIndicator}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding TypeIndicator}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding TypeIndicator}"
                                                                   Foreground="White"
                                                                   FontSize="10"
                                                                   FontWeight="Medium"
                                                                   TextAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </HierarchicalDataTemplate>
                                    </TreeView.ItemTemplate>
                                    <TreeView.ItemContainerStyle>
                                        <Style TargetType="TreeViewItem" BasedOn="{StaticResource MaterialDesignTreeViewItem}">
                                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                        </Style>
                                    </TreeView.ItemContainerStyle>
                                </TreeView>

                                <!-- Empty State -->
                                <StackPanel VerticalAlignment="Center" 
                                            HorizontalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding InfrastructureViewModel.IsLoading}" Value="False"/>
                                                        <Condition Binding="{Binding InfrastructureViewModel.InfrastructureItems.Count}" Value="0"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                                    <materialDesign:PackIcon Kind="ServerNetwork" 
                                                                             Height="48" Width="48"
                                                                             HorizontalAlignment="Center"
                                                                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                             Margin="0,0,0,16"/>
                                                    <TextBlock Text="No infrastructure data available"
                                                               FontSize="16"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,4"/>
                                                    <TextBlock Text="Connect to a vCenter server to view clusters, hosts, and datastores"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                               HorizontalAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               MaxWidth="300"/>
                                                </StackPanel>
                                            </Grid>
                                        </materialDesign:Card>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="Checks">
                                    <Grid Margin="16">
                                        <TextBlock Text="Health &amp; Configuration Checks - Coming Soon"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Status Bar -->
            <materialDesign:ColorZone Grid.Row="2" 
                                      Mode="PrimaryLight" 
                                      Padding="16,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="{Binding StatusMessage}"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Clock" 
                                                 Height="16" Width="16"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding CurrentTime, StringFormat='HH:mm:ss'}"
                                   VerticalAlignment="Center"
                                   FontFamily="Consolas"/>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>
        </Grid>
    </materialDesign:DialogHost>
</Window> 