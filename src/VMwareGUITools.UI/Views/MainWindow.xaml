<Window x:Class="VMwareGUITools.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:VMwareGUITools.UI.ViewModels"
        xmlns:converters="clr-namespace:VMwareGUITools.UI.Converters"
        xmlns:core="clr-namespace:VMwareGUITools.Core.Models;assembly=VMwareGUITools.Core"
        Title="VMware GUI Tools - vSphere Infrastructure Management" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:ResourceUsageConverter x:Key="ResourceUsageConverter"/>
        
        <!-- Inverse Boolean to Visibility Converter -->
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        
        <!-- String to Visibility Converter -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <materialDesign:ColorZone Grid.Row="0" 
                                      Padding="16,8" 
                                      materialDesign:ElevationAssist.Elevation="Dp4"
                                      Mode="PrimaryMid">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Server" 
                                                 Height="32" Width="32" 
                                                 VerticalAlignment="Center"
                                                 Foreground="White"
                                                 Margin="0,0,12,0"/>
                        <TextBlock Text="VMware GUI Tools" 
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Medium"
                                   Foreground="White"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                                Command="{Binding RefreshCommand}"
                                ToolTip="Refresh All"
                                Margin="4,0">
                            <materialDesign:PackIcon Kind="Refresh" 
                                                     Height="20" Width="20"
                                                     Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignToolButton}"
                                Command="{Binding SettingsCommand}"
                                ToolTip="Settings"
                                Margin="4,0">
                            <materialDesign:PackIcon Kind="Settings" 
                                                     Height="20" Width="20"
                                                     Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" MinWidth="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - vCenter List -->
                <materialDesign:Card Grid.Column="0" 
                                     Margin="8"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- vCenter Panel Header -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource VMwareBlueBrush}"
                                Padding="16,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                           Text="vCenter Servers"
                                           FontWeight="Medium"
                                           FontSize="16"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                
                                <Button Grid.Column="1"
                                        Style="{StaticResource MaterialDesignToolButton}"
                                        Command="{Binding AddAvailabilityZoneCommand}"
                                        ToolTip="Add Availability Zone"
                                        Margin="0,0,4,0">
                                    <materialDesign:PackIcon Kind="FolderPlus" 
                                                             Height="18" Width="18"
                                                             Foreground="White"/>
                                </Button>
                                
                                <Separator Grid.Column="2" 
                                           Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"
                                           Margin="4,2"/>
                                
                                <Button Grid.Column="3"
                                        Style="{StaticResource MaterialDesignToolButton}"
                                        Command="{Binding AddVCenterCommand}"
                                        ToolTip="Add vCenter Server">
                                    <materialDesign:PackIcon Kind="Plus" 
                                                             Height="20" Width="20"
                                                             Foreground="White"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Grouped vCenter List with Separators -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding AvailabilityZones}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,8">
                                            <!-- Zone Separator/Header -->
                                            <Border Background="{DynamicResource MaterialDesignDivider}"
                                                    Height="1"
                                                    Margin="16,0"/>
                                            
                                            <Grid Margin="16,8,16,4"
                                                  Background="Transparent">
                                                                                                 <Grid.ContextMenu>
                                                     <ContextMenu>
                                                         <MenuItem Header="Edit Zone" 
                                                                   Icon="{materialDesign:PackIcon Kind=Edit}"
                                                                   Command="{Binding DataContext.EditAvailabilityZoneCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                   CommandParameter="{Binding}"/>
                                                         <MenuItem Header="Delete Zone" 
                                                                   Icon="{materialDesign:PackIcon Kind=Delete}"
                                                                   Command="{Binding DataContext.DeleteAvailabilityZoneCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                   CommandParameter="{Binding}"/>
                                                     </ContextMenu>
                                                 </Grid.ContextMenu>
                                                
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Name}"
                                                           FontWeight="SemiBold"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource MaterialDesignBody}"
                                                           VerticalAlignment="Center"/>
                                                
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding VCenterCount, StringFormat='({0})'}"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>
                                            </Grid>
                                            
                                            <!-- vCenters under this zone -->
                                            <ItemsControl ItemsSource="{Binding VCenters}"
                                                          Margin="24,0,16,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,2" 
                                                              Background="Transparent">
                                                            <Grid.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Edit" 
                                                                              Icon="{materialDesign:PackIcon Kind=Edit}"
                                                                              Command="{Binding DataContext.EditVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                              CommandParameter="{Binding}"/>
                                                                    <MenuItem Header="Delete" 
                                                                              Icon="{materialDesign:PackIcon Kind=Delete}"
                                                                              Command="{Binding DataContext.DeleteVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                              CommandParameter="{Binding}"/>
                                                                    <Separator/>
                                                                    <MenuItem Header="Test Connection" 
                                                                              Icon="{materialDesign:PackIcon Kind=Connection}"
                                                                              Command="{Binding DataContext.TestVCenterConnectionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                              CommandParameter="{Binding}"/>
                                                                    <Separator/>
                                                                    <MenuItem Header="Move to Zone" Icon="{materialDesign:PackIcon Kind=FolderMove}">
                                                                        <!-- Zone submenu items would be bound here -->
                                                                    </MenuItem>
                                                                </ContextMenu>
                                                            </Grid.ContextMenu>
                                                            
                                                            <Grid.InputBindings>
                                                                <MouseBinding MouseAction="LeftClick"
                                                                              Command="{Binding DataContext.ConnectVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                              CommandParameter="{Binding}"/>
                                                            </Grid.InputBindings>
                                                            
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                                                                                         <Grid.ColumnDefinitions>
                                                                 <ColumnDefinition Width="Auto"/>
                                                                 <ColumnDefinition Width="*"/>
                                                                 <ColumnDefinition Width="Auto"/>
                                                             </Grid.ColumnDefinitions>

                                                             <!-- Status Indicator -->
                                                             <Ellipse Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                                                      Width="10" Height="10"
                                                                      VerticalAlignment="Center"
                                                                      Margin="0,0,8,0">
                                                                 <Ellipse.Style>
                                                                     <Style TargetType="Ellipse">
                                                                         <Style.Triggers>
                                                                             <DataTrigger Binding="{Binding Status}" Value="Connected">
                                                                                 <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                                             </DataTrigger>
                                                                             <DataTrigger Binding="{Binding Status}" Value="Disconnected">
                                                                                 <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                                                             </DataTrigger>
                                                                             <DataTrigger Binding="{Binding Status}" Value="NotTested">
                                                                                 <Setter Property="Fill" Value="{StaticResource InfoBrush}"/>
                                                                             </DataTrigger>
                                                                             <DataTrigger Binding="{Binding Status}" Value="Stale">
                                                                                 <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                                                             </DataTrigger>
                                                                             <DataTrigger Binding="{Binding Status}" Value="Disabled">
                                                                                 <Setter Property="Fill" Value="Gray"/>
                                                                             </DataTrigger>
                                                                         </Style.Triggers>
                                                                     </Style>
                                                                 </Ellipse.Style>
                                                             </Ellipse>

                                                             <!-- vCenter Name -->
                                                             <TextBlock Grid.Row="0" Grid.Column="1"
                                                                        Text="{Binding DisplayName}"
                                                                        FontWeight="Medium"
                                                                        FontSize="13"
                                                                        TextTrimming="CharacterEllipsis"/>

                                                             <!-- vCenter URL -->
                                                             <TextBlock Grid.Row="1" Grid.Column="1"
                                                                        Text="{Binding Url}"
                                                                        FontSize="10"
                                                                        Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                        TextTrimming="CharacterEllipsis"/>

                                                             <!-- Edit Button -->
                                                             <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"
                                                                     Style="{StaticResource MaterialDesignToolButton}"
                                                                     Command="{Binding DataContext.EditVCenterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                     CommandParameter="{Binding}"
                                                                     ToolTip="Edit vCenter"
                                                                     Width="24" Height="24"
                                                                     Margin="2,0">
                                                                 <materialDesign:PackIcon Kind="Edit" Height="12" Width="12"/>
                                                             </Button>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- VMware API Status -->
                        <Border Grid.Row="2" 
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,1,0,0"
                                Padding="16,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="CloudSync"
                                                         Height="16" Width="16"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="False">
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                                
                                <TextBlock Grid.Column="1"
                                           FontSize="11"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="True">
                                                    <Setter Property="Text" Value="VMware REST API Ready"/>
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsPowerCLIAvailable}" Value="False">
                                                    <Setter Property="Text" Value="VMware API Not Available"/>
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- Database Status -->
                        <Border Grid.Row="3" 
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,1,0,0"
                                Padding="16,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="Database"
                                                         Height="16" Width="16"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDatabaseConnected}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsDatabaseConnected}" Value="False">
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                                
                                <TextBlock Grid.Column="1"
                                           FontSize="11"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDatabaseConnected}" Value="True">
                                                    <Setter Property="Text" Value="Database Connected"/>
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsDatabaseConnected}" Value="False">
                                                    <Setter Property="Text" Value="Database Disconnected"/>
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Grid>
                </materialDesign:Card>

                <!-- Splitter -->
                <GridSplitter Grid.Column="1" 
                              Width="4" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Stretch"
                              Background="{DynamicResource MaterialDesignDivider}"/>

                <!-- Right Panel - Main Content -->
                <materialDesign:Card Grid.Column="2" 
                                     Margin="8"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid>
                        <!-- Welcome Screen -->
                        <StackPanel VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Visibility="{Binding ShowWelcomeScreen, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <materialDesign:PackIcon Kind="Server" 
                                                     Height="64" Width="64"
                                                     HorizontalAlignment="Center"
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                     Margin="0,0,0,16"/>
                            <TextBlock Text="Welcome to VMware GUI Tools"
                                       FontSize="24"
                                       FontWeight="Light"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Add a vCenter Server to get started"
                                       FontSize="16"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Content Area (when vCenter is selected) -->
                        <Grid Visibility="{Binding ShowContentArea, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Content Header -->
                            <Border Grid.Row="0" 
                                    Background="{DynamicResource MaterialDesignChipBackground}"
                                    Padding="16,12">
                                <TextBlock Text="{Binding SelectedVCenter.DisplayName, StringFormat='vCenter: {0}'}"
                                           FontWeight="Medium"
                                           FontSize="18"/>
                            </Border>

                            <!-- Tabs/Content -->
                            <TabControl Grid.Row="1" 
                                        Style="{StaticResource MaterialDesignTabControl}"
                                        Margin="16">
                                <TabItem Header="Overview">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="8">
                                        <Grid x:Name="OverviewContent">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header with Refresh Button -->
                                            <Border Grid.Row="0" 
                                                    Background="{DynamicResource MaterialDesignChipBackground}"
                                                    CornerRadius="4"
                                                    Margin="0,0,0,16"
                                                    Padding="16,12">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                        <TextBlock Text="vCenter Overview"
                                                                   FontSize="18"
                                                                   FontWeight="Medium"/>
                                                        <TextBlock Text="Real-time resource utilization and inventory"
                                                                   FontSize="12"
                                                                   Opacity="0.7"
                                                                   Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                    
                                                    <Button Grid.Column="1"
                                                            Style="{StaticResource MaterialDesignToolButton}"
                                                            Command="{Binding VCenterOverviewViewModel.RefreshCommand}"
                                                            ToolTip="Refresh Overview Data">
                                                        <materialDesign:PackIcon Kind="Refresh" Height="20" Width="20"/>
                                                    </Button>
                                                </Grid>
                                            </Border>

                                            <!-- Summary Cards Row -->
                                            <Grid Grid.Row="1" Margin="0,0,0,16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Clusters Card -->
                                                <materialDesign:Card Grid.Column="0" 
                                                                     Margin="0,0,8,0"
                                                                     materialDesign:ElevationAssist.Elevation="Dp2">
                                                    <Border Padding="16">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <materialDesign:PackIcon Grid.Row="0"
                                                                                     Kind="ServerNetwork"
                                                                                     Height="32" Width="32"
                                                                                     HorizontalAlignment="Center"
                                                                                     Foreground="{StaticResource VMwareBlueBrush}"
                                                                                     Margin="0,0,0,8"/>
                                                            
                                                            <TextBlock Grid.Row="1"
                                                                       Text="{Binding VCenterOverviewViewModel.OverviewData.ClusterCount, FallbackValue=0}"
                                                                       FontSize="28"
                                                                       FontWeight="Bold"
                                                                       HorizontalAlignment="Center"
                                                                       Foreground="{StaticResource VMwareBlueBrush}"/>
                                                            
                                                            <TextBlock Grid.Row="2"
                                                                       Text="Clusters"
                                                                       FontSize="14"
                                                                       HorizontalAlignment="Center"
                                                                       Opacity="0.8"/>
                                                        </Grid>
                                                    </Border>
                                                </materialDesign:Card>

                                                <!-- Hosts Card -->
                                                <materialDesign:Card Grid.Column="1" 
                                                                     Margin="4,0"
                                                                     materialDesign:ElevationAssist.Elevation="Dp2">
                                                    <Border Padding="16">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <materialDesign:PackIcon Grid.Row="0"
                                                                                     Kind="Server"
                                                                                     Height="32" Width="32"
                                                                                     HorizontalAlignment="Center"
                                                                                     Foreground="{StaticResource VMwareOrangeBrush}"
                                                                                     Margin="0,0,0,8"/>
                                                            
                                                            <TextBlock Grid.Row="1"
                                                                       Text="{Binding VCenterOverviewViewModel.OverviewData.HostCount, FallbackValue=0}"
                                                                       FontSize="28"
                                                                       FontWeight="Bold"
                                                                       HorizontalAlignment="Center"
                                                                       Foreground="{StaticResource VMwareOrangeBrush}"/>
                                                            
                                                            <TextBlock Grid.Row="2"
                                                                       Text="Hosts"
                                                                       FontSize="14"
                                                                       HorizontalAlignment="Center"
                                                                       Opacity="0.8"/>
                                                        </Grid>
                                                    </Border>
                                                </materialDesign:Card>

                                                <!-- VMs Card -->
                                                <materialDesign:Card Grid.Column="2" 
                                                                     Margin="8,0,0,0"
                                                                     materialDesign:ElevationAssist.Elevation="Dp2">
                                                    <Border Padding="16">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <materialDesign:PackIcon Grid.Row="0"
                                                                                     Kind="Monitor"
                                                                                     Height="32" Width="32"
                                                                                     HorizontalAlignment="Center"
                                                                                     Foreground="{StaticResource VMwareGreenBrush}"
                                                                                     Margin="0,0,0,8"/>
                                                            
                                                            <TextBlock Grid.Row="1"
                                                                       Text="{Binding VCenterOverviewViewModel.OverviewData.VmCount, FallbackValue=0}"
                                                                       FontSize="28"
                                                                       FontWeight="Bold"
                                                                       HorizontalAlignment="Center"
                                                                       Foreground="{StaticResource VMwareGreenBrush}"/>
                                                            
                                                            <TextBlock Grid.Row="2"
                                                                       Text="Virtual Machines"
                                                                       FontSize="14"
                                                                       HorizontalAlignment="Center"
                                                                       Opacity="0.8"/>
                                                        </Grid>
                                                    </Border>
                                                </materialDesign:Card>
                                            </Grid>

                                            <!-- Resource usage gauges removed as requested -->
                                        </Grid>
                                    </ScrollViewer>
                                </TabItem>
                                <TabItem Header="Infrastructure">
                                    <Grid Margin="16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header with Refresh Button -->
                                        <Border Grid.Row="0" 
                                                Background="{DynamicResource MaterialDesignChipBackground}"
                                                CornerRadius="4"
                                                Margin="0,0,0,16"
                                                Padding="16,12">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Server" 
                                                                             Height="20" Width="20"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,8,0"/>
                                                    <TextBlock Text="Infrastructure Overview"
                                                               FontWeight="Medium"
                                                               FontSize="16"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="Live Data - Status updates every 2 minutes"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                               VerticalAlignment="Center"
                                                               Margin="8,0,0,0"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Row="0" Grid.Column="1"
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding InfrastructureViewModel.RefreshCommand}"
                                                        ToolTip="Refresh Infrastructure"
                                                        Height="32" Width="32">
                                                    <materialDesign:PackIcon Kind="Refresh" Height="16" Width="16"/>
                                                </Button>

                                                <!-- Status and Last Updated -->
                                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                            Orientation="Horizontal" 
                                                            Margin="0,8,0,0">
                                                    <TextBlock Text="{Binding InfrastructureViewModel.StatusMessage}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding InfrastructureViewModel.LastUpdated, StringFormat=' | Last Updated: {0:HH:mm:ss}'}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                               VerticalAlignment="Center"
                                                               Visibility="{Binding InfrastructureViewModel.LastUpdated, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- Infrastructure Tree View -->
                                        <materialDesign:Card Grid.Row="1" 
                                                             materialDesign:ElevationAssist.Elevation="Dp1"
                                                             Padding="0">
                                            <Grid>
                                                <!-- Loading Indicator -->
                                                <Grid Visibility="{Binding InfrastructureViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <StackPanel VerticalAlignment="Center" 
                                                                HorizontalAlignment="Center">
                                                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                                     Width="48" Height="48"
                                                                     IsIndeterminate="True"
                                                                     Margin="0,0,0,16"/>
                                                        <TextBlock Text="Loading Infrastructure..."
                                                                   HorizontalAlignment="Center"
                                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                    </StackPanel>
                                                </Grid>

                                                                                <!-- TreeView -->
                                <TreeView ItemsSource="{Binding InfrastructureViewModel.InfrastructureItems}"
                                          Padding="8">
                                    <TreeView.Style>
                                        <Style TargetType="TreeView" BasedOn="{StaticResource MaterialDesignTreeView}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding InfrastructureViewModel.IsLoading}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding InfrastructureViewModel.InfrastructureItems.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TreeView.Style>
                                    <TreeView.ItemTemplate>
                                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                            <Border Padding="4,2" 
                                                    CornerRadius="2"
                                                    ToolTip="{Binding ToolTip}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Status Indicator with Animation -->
                                                    <Ellipse Grid.Column="0"
                                                             Width="8" Height="8"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,6,0"
                                                             Fill="{Binding StatusColor}">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ShouldFlash}" Value="True">
                                                                        <DataTrigger.EnterActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard RepeatBehavior="Forever">
                                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                                     From="1.0" To="0.3" Duration="0:0:0.8"
                                                                                                     AutoReverse="True"/>
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </DataTrigger.EnterActions>
                                                                        <DataTrigger.ExitActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                                     To="1.0" Duration="0:0:0.2"/>
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </DataTrigger.ExitActions>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>

                                                    <!-- Icon -->
                                                    <materialDesign:PackIcon Grid.Column="1"
                                                                             Kind="{Binding Icon}"
                                                                             Height="16" Width="16"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,6,0">
                                                        <materialDesign:PackIcon.Style>
                                                            <Style TargetType="materialDesign:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Type}" Value="Cluster">
                                                                        <Setter Property="Foreground" Value="#2196F3"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Type}" Value="Host">
                                                                        <Setter Property="Foreground" Value="#FF9800"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Type}" Value="DatastoresFolder">
                                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Type}" Value="Datastore">
                                                                        <Setter Property="Foreground" Value="#9C27B0"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </materialDesign:PackIcon.Style>
                                                    </materialDesign:PackIcon>

                                                    <!-- Name -->
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding Name}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Type}" Value="Cluster">
                                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Type}" Value="DatastoresFolder">
                                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <!-- Type Indicator -->
                                                    <Border Grid.Column="3"
                                                            Background="{Binding TypeIndicatorColor}"
                                                            CornerRadius="2"
                                                            Padding="4,1"
                                                            Margin="4,0,0,0"
                                                            VerticalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding TypeIndicator}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding TypeIndicator}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding TypeIndicator}"
                                                                   Foreground="White"
                                                                   FontSize="10"
                                                                   FontWeight="Medium"
                                                                   TextAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </HierarchicalDataTemplate>
                                    </TreeView.ItemTemplate>
                                    <TreeView.ItemContainerStyle>
                                        <Style TargetType="TreeViewItem" BasedOn="{StaticResource MaterialDesignTreeViewItem}">
                                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                        </Style>
                                    </TreeView.ItemContainerStyle>
                                </TreeView>

                                <!-- Empty State -->
                                <StackPanel VerticalAlignment="Center" 
                                            HorizontalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding InfrastructureViewModel.IsLoading}" Value="False"/>
                                                        <Condition Binding="{Binding InfrastructureViewModel.InfrastructureItems.Count}" Value="0"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                                    <materialDesign:PackIcon Kind="ServerNetwork" 
                                                                             Height="48" Width="48"
                                                                             HorizontalAlignment="Center"
                                                                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                             Margin="0,0,0,16"/>
                                                    <TextBlock Text="No infrastructure data available"
                                                               FontSize="16"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,4"/>
                                                    <TextBlock Text="Connect to a vCenter server to view clusters, hosts, and datastores"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                               HorizontalAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               MaxWidth="300"/>
                                                </StackPanel>
                                            </Grid>
                                        </materialDesign:Card>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="Checks">
                                    <Grid Margin="16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header with Refresh Button -->
                                        <Border Grid.Row="0" 
                                                Background="{DynamicResource MaterialDesignChipBackground}"
                                                CornerRadius="4"
                                                Margin="0,0,0,16"
                                                Padding="16,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="CheckBold" Height="20" Width="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Health &amp; Configuration Checks" FontWeight="Medium" FontSize="16" VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <Button Grid.Column="1"
                                                        Content="Run iSCSI Check"
                                                        Command="{Binding RuniSCSICheckCommand}"
                                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                                        Margin="0,0,8,0"/>

                                                <Button Grid.Column="2"
                                                        Content="Refresh"
                                                        Command="{Binding CheckResultsViewModel.RefreshCommand}"
                                                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
                                            </Grid>
                                        </Border>

                                        <!-- Filters and Controls -->
                                        <Grid Grid.Row="1" Margin="0,0,0,16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox Grid.Column="0"
                                                     materialDesign:HintAssist.Hint="Search checks..."
                                                     Text="{Binding CheckResultsViewModel.FilterText, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                     Margin="0,0,16,0"/>

                                            <ComboBox Grid.Column="1"
                                                      materialDesign:HintAssist.Hint="Filter by Status"
                                                      SelectedValue="{Binding CheckResultsViewModel.FilterStatus}"
                                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                                      Width="150"
                                                      Margin="0,0,16,0">
                                                <ComboBoxItem Content="All" Tag="{x:Null}"/>
                                                <ComboBoxItem Content="Passed" Tag="{x:Static core:CheckStatus.Passed}"/>
                                                <ComboBoxItem Content="Failed" Tag="{x:Static core:CheckStatus.Failed}"/>
                                                <ComboBoxItem Content="Warning" Tag="{x:Static core:CheckStatus.Warning}"/>
                                                <ComboBoxItem Content="Critical" Tag="{x:Static core:CheckStatus.Critical}"/>
                                            </ComboBox>

                                            <Button Grid.Column="2"
                                                    Content="Clear Filters"
                                                    Command="{Binding CheckResultsViewModel.ClearFiltersCommand}"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Margin="0,0,8,0"/>

                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding CheckResultsViewModel.StatusMessage}"
                                                       VerticalAlignment="Center"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                        </Grid>

                                        <!-- Check Results -->
                                        <materialDesign:Card Grid.Row="2">
                                            <Grid>
                                                <!-- Loading Indicator -->
                                                <ProgressBar IsIndeterminate="True"
                                                           Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                           Width="48" Height="48"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Visibility="{Binding CheckResultsViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                <!-- Results List -->
                                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                            Visibility="{Binding CheckResultsViewModel.IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                    <ItemsControl ItemsSource="{Binding CheckResultsViewModel.CheckResultsView}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <materialDesign:Card Margin="8" Padding="16">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="Auto"/>
                                                                            <RowDefinition Height="Auto"/>
                                                                            <RowDefinition Height="Auto"/>
                                                                        </Grid.RowDefinitions>

                                                                        <!-- Status Icon -->
                                                                        <Border Grid.Column="0" Grid.RowSpan="3"
                                                                                Width="4"
                                                                                VerticalAlignment="Stretch"
                                                                                Margin="0,0,12,0">
                                                                            <Border.Style>
                                                                                <Style TargetType="Border">
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static core:CheckStatus.Passed}">
                                                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static core:CheckStatus.Failed}">
                                                                                            <Setter Property="Background" Value="#F44336"/>
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static core:CheckStatus.Warning}">
                                                                                            <Setter Property="Background" Value="#FF9800"/>
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static core:CheckStatus.Critical}">
                                                                                            <Setter Property="Background" Value="#E91E63"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Border.Style>
                                                                        </Border>

                                                                        <!-- Check Name and Host -->
                                                                        <StackPanel Grid.Column="1" Grid.Row="0">
                                                                            <TextBlock Text="{Binding CheckDefinition.Name}"
                                                                                     FontWeight="Medium"
                                                                                     FontSize="14"/>
                                                                            <TextBlock Text="{Binding Host.Name, StringFormat='Host: {0}'}"
                                                                                     FontSize="12"
                                                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                                        </StackPanel>

                                                                        <!-- Status Badge -->
                                                                        <materialDesign:Chip Grid.Column="2" Grid.Row="0"
                                                                                           Content="{Binding Status}"
                                                                                           VerticalAlignment="Top"
                                                                                           FontSize="11">
                                                                            <materialDesign:Chip.Style>
                                                                                <Style TargetType="materialDesign:Chip">
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static core:CheckStatus.Passed}">
                                                                                            <Setter Property="Background" Value="#E8F5E8"/>
                                                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static core:CheckStatus.Failed}">
                                                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                                                            <Setter Property="Foreground" Value="#C62828"/>
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static core:CheckStatus.Warning}">
                                                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                                                            <Setter Property="Foreground" Value="#E65100"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </materialDesign:Chip.Style>
                                                                        </materialDesign:Chip>

                                                                        <!-- Execution Time -->
                                                                        <TextBlock Grid.Column="3" Grid.Row="0"
                                                                                 Text="{Binding ExecutionTimeDisplay}"
                                                                                 FontSize="11"
                                                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                                 VerticalAlignment="Top"
                                                                                 Margin="8,0,0,0"/>

                                                                        <!-- Output/Error Message -->
                                                                        <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1"
                                                                                 Text="{Binding Output}"
                                                                                 FontSize="12"
                                                                                 TextWrapping="Wrap"
                                                                                 MaxHeight="100"
                                                                                 Margin="0,8,0,0"
                                                                                 Visibility="{Binding Output, Converter={StaticResource StringToVisibilityConverter}}"/>

                                                                        <!-- Error Message -->
                                                                        <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2"
                                                                                 Text="{Binding ErrorMessage}"
                                                                                 FontSize="12"
                                                                                 TextWrapping="Wrap"
                                                                                 Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                                                                 Margin="0,4,0,0"
                                                                                 Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                                                                        <!-- Execution Date -->
                                                                        <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2"
                                                                                 Text="{Binding ExecutedAt, StringFormat='Executed: {0:yyyy-MM-dd HH:mm:ss}'}"
                                                                                 FontSize="10"
                                                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                                 HorizontalAlignment="Right"
                                                                                 VerticalAlignment="Bottom"/>
                                                                    </Grid>
                                                                </materialDesign:Card>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </ScrollViewer>

                                                <!-- Empty State -->
                                                <StackPanel VerticalAlignment="Center" 
                                                          HorizontalAlignment="Center"
                                                          Visibility="{Binding CheckResultsViewModel.IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                    <StackPanel.Style>
                                                        <Style TargetType="StackPanel">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding CheckResultsViewModel.CheckResults.Count}" Value="0">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </StackPanel.Style>
                                                    <materialDesign:PackIcon Kind="CheckBold" 
                                                                           Height="48" Width="48"
                                                                           HorizontalAlignment="Center"
                                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                           Margin="0,0,0,16"/>
                                                    <TextBlock Text="No check results available"
                                                             FontSize="16"
                                                             HorizontalAlignment="Center"
                                                             Margin="0,0,0,4"/>
                                                    <TextBlock Text="Run some checks to see results here"
                                                             FontSize="12"
                                                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                             HorizontalAlignment="Center"
                                                             TextWrapping="Wrap"
                                                             MaxWidth="300"/>
                                                </StackPanel>
                                            </Grid>
                                        </materialDesign:Card>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Status Bar -->
            <materialDesign:ColorZone Grid.Row="2" 
                                      Mode="PrimaryLight" 
                                      Padding="16,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="{Binding StatusMessage}"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Clock" 
                                                 Height="16" Width="16"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding CurrentTime, StringFormat='HH:mm:ss'}"
                                   VerticalAlignment="Center"
                                   FontFamily="Consolas"/>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>
        </Grid>
    </materialDesign:DialogHost>
</Window> 