<Window x:Class="VMwareGUITools.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings" 
        Height="700" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="700"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" 
                                  Mode="PrimaryMid" 
                                  Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <materialDesign:PackIcon Grid.Column="0"
                                         Kind="Settings" 
                                         Height="32" Width="32"
                                         VerticalAlignment="Center"
                                         Foreground="White"
                                         Margin="0,0,12,0"/>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Settings"
                               FontSize="20"
                               FontWeight="Medium"
                               Foreground="White"/>
                    <TextBlock Text="Configure VMware GUI Tools"
                               FontSize="12"
                               Foreground="White"
                               Opacity="0.8"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Content -->
        <TabControl Grid.Row="1" 
                    Style="{StaticResource MaterialDesignTabControl}"
                    Margin="16">
            
            <!-- PowerShell Tab -->
            <TabItem Header="PowerShell">
                <ScrollViewer Padding="16" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="PowerCLI Configuration"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   Margin="0,0,0,16"/>

                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Execution Policy:"
                                       VerticalAlignment="Center"/>
                            
                            <ComboBox Grid.Column="1"
                                      SelectedValue="{Binding PowerShellExecutionPolicy}"
                                      Style="{StaticResource MaterialDesignComboBox}"
                                      Margin="8,0">
                                <ComboBoxItem Content="RemoteSigned"/>
                                <ComboBoxItem Content="Unrestricted"/>
                                <ComboBoxItem Content="Bypass"/>
                            </ComboBox>
                            
                            <Button Grid.Column="2"
                                    Content="Test PowerCLI"
                                    Command="{Binding TestPowerCLICommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="8,0,0,0"/>
                        </Grid>

                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Timeout (seconds):"
                                       VerticalAlignment="Center"/>
                            
                            <TextBox Grid.Column="1"
                                     Text="{Binding PowerShellTimeoutSeconds}"
                                     Style="{StaticResource MaterialDesignTextBox}"
                                     Margin="8,0"/>
                        </Grid>

                        <CheckBox Content="Enable PowerCLI auto-update checks"
                                  IsChecked="{Binding EnablePowerCLIAutoUpdate}"
                                  Margin="0,8"/>

                        <CheckBox Content="Enable verbose PowerShell logging"
                                  IsChecked="{Binding EnableVerboseLogging}"
                                  Margin="0,8"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Host Profiles Tab -->
            <TabItem Header="Host Profiles">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Profile List -->
                    <materialDesign:Card Grid.Column="0" Margin="0,0,8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" 
                                    Background="{DynamicResource MaterialDesignChipBackground}"
                                    Padding="16,8">
                                <TextBlock Text="Host Profiles"
                                           FontWeight="Medium"/>
                            </Border>

                            <ListBox Grid.Row="1"
                                     ItemsSource="{Binding HostProfiles}"
                                     SelectedItem="{Binding SelectedHostProfile}"
                                     Style="{StaticResource MaterialDesignListBox}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{Binding IsEnabled}"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,8,0"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="Medium"/>
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Border Grid.Row="2" 
                                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                                    BorderThickness="0,1,0,0"
                                    Padding="8">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Add Profile" 
                                            Command="{Binding AddHostProfileCommand}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Margin="0,0,8,0"/>
                                    <Button Content="Remove" 
                                            Command="{Binding RemoveHostProfileCommand}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Profile Details -->
                    <materialDesign:Card Grid.Column="1" Margin="8,0,0,0">
                        <StackPanel Margin="16" DataContext="{Binding SelectedHostProfile}">
                            <TextBlock Text="Profile Details"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       Margin="0,0,0,16"/>

                            <TextBox materialDesign:HintAssist.Hint="Profile Name"
                                     Text="{Binding Name}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Margin="0,0,0,16"/>

                            <TextBox materialDesign:HintAssist.Hint="Description"
                                     Text="{Binding Description}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     AcceptsReturn="True"
                                     MaxLines="3"
                                     Margin="0,0,0,16"/>

                            <TextBlock Text="Check Categories"
                                       FontWeight="Medium"
                                       Margin="0,16,0,8"/>

                            <CheckBox Content="Hardware Health" IsChecked="{Binding HardwareHealthEnabled}" Margin="0,4"/>
                            <CheckBox Content="Network Configuration" IsChecked="{Binding NetworkConfigurationEnabled}" Margin="0,4"/>
                            <CheckBox Content="Storage Health" IsChecked="{Binding StorageHealthEnabled}" Margin="0,4"/>
                            <CheckBox Content="Security Settings" IsChecked="{Binding SecuritySettingsEnabled}" Margin="0,4"/>
                            <CheckBox Content="vSAN Health" IsChecked="{Binding VsanHealthEnabled}" Margin="0,4"/>
                            <CheckBox Content="NSX Configuration" IsChecked="{Binding NsxConfigurationEnabled}" Margin="0,4"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Action Buttons -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Reset to Defaults"
                        Command="{Binding ResetToDefaultsCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0"/>

                <Button Grid.Column="2"
                        Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="8,0"/>

                <Button Grid.Column="3"
                        Content="Save Settings"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        IsDefault="True"
                        Margin="8,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window> 