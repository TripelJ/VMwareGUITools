{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source={DatabasePath}"
  },
  "Database": {
    "RelativePathFromExecutable": "../../../../../vmware-gui-tools.db",
    "FileName": "vmware-gui-tools.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "VMwareGUITools.Infrastructure.VMware": "Debug",
      "VMwareGUITools.Infrastructure.PowerShell": "Debug",
      "VMwareGUITools.Infrastructure.Checks": "Information"
    }
  },
  "EntityFramework": {
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": true
  },
  "VMwareGUITools": {
    "UseMachineLevelEncryption": false,
    "ConnectionTimeoutSeconds": 30,
    "DefaultCheckTimeoutSeconds": 300,
    "EnableAutoDiscovery": true,
    "CheckScriptsPath": "Scripts",
    "ReportsPath": "Reports"
  },
  "vSphereRestAPI": {
    "ConnectionTimeoutSeconds": 60,
    "RequestTimeoutSeconds": 300,
    "IgnoreInvalidCertificates": true,
    "EnableVerboseLogging": true,
    "MaxConcurrentConnections": 10,
    "EnableSessionPooling": true,
    "SessionPoolSize": 5,
    "SessionIdleTimeoutMinutes": 30,
    "RetryAttempts": 3,
    "RetryDelaySeconds": 2
  },
  "PowerShell": {
    "DefaultTimeoutSeconds": 600,
    "MaxConcurrentCommands": 5,
    "EnableVerboseLogging": false,
    "WorkingDirectory": "",
    "EnvironmentVariables": {}
  },
  "PowerCLI": {
    "ConnectionTimeoutSeconds": 120,
    "CommandTimeoutSeconds": 600,
    "IgnoreInvalidCertificates": true,
    "EnableVerboseLogging": false,
    "PreferredPowerCLIVersion": ""
  },
  "CheckExecution": {
    "MaxConcurrentChecksPerHost": 3,
    "MaxConcurrentHosts": 5,
    "DefaultTimeoutSeconds": 600,
    "EnableDetailedLogging": true,
    "SaveFailedCheckLogs": true
  },
  "HttpClient": {
    "DefaultTimeoutSeconds": 300,
    "MaxResponseContentBufferSize": 10485760,
    "EnableCompression": true
  }
} 