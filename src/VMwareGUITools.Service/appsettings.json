{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=vmware-gui-tools.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "VMwareGUITools": {
    "UseMachineLevelEncryption": false,
    "ConnectionTimeoutSeconds": 30,
    "DefaultCheckTimeoutSeconds": 300,
    "EnableAutoDiscovery": true,
    "PowerCLIModulePath": "",
    "CheckScriptsPath": "Scripts",
    "ReportsPath": "Reports"
  },
  "PowerShell": {
    "DefaultTimeoutSeconds": 300,
    "MaxConcurrentExecutions": 5,
    "EnableScriptSigning": false
  },
  "PowerCLI": {
    "ConnectionTimeoutSeconds": 60,
    "CommandTimeoutSeconds": 300,
    "IgnoreInvalidCertificates": true,
    "EnableVerboseLogging": false,
    "PreferredPowerCLIVersion": "13.4.0"
  },
  "CheckExecution": {
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 30,
    "DefaultConcurrency": 5,
    "LogExecutionResults": true
  }
} 